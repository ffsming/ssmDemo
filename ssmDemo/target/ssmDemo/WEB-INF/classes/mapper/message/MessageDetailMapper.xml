<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hxwy.dao.message.MessageDetailMapper" > 
	<select id="queryList" parameterType="com.hxwy.pojo.message.MessageDetailModel" resultType="com.hxwy.pojo.message.MessageDetailModel">
		select * from t_message_detail 
		<where>
			<![CDATA[ sendTime<now() ]]>     
			and  status in (0,2) 
		</where>
		order by sendTime
	</select>
</mapper>